<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shopping">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/my_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/permission_allowed"
        android:roundIcon="@drawable/my_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shopping"
        tools:targetApi="31">
        <activity
            android:name=".Activity.WishListActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SingleProductActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.CategoriesProductDetails"
            android:exported="false" />
        <activity
            android:name=".Activity.ProductDetails"
            android:exported="false" />
        <activity
            android:name=".Activity.CategoriesActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.TestingActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>